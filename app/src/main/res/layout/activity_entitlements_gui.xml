<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#000000"
	tools:context=".EntitlementsGUI">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		

		<ImageView
			android:id="@+id/imageView7"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:srcCompat="@drawable/logo" />

		<TextView
			android:layout_margin="20dp"
			android:id="@+id/textView2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Please thick the options which are relevent to you, enter your age and number of dependants."
			android:textColor="@android:color/holo_orange_light"
			android:textSize="24sp" />

		<RadioGroup
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_gravity="center_horizontal"
			android:layout_margin="5dp">

			<TextView
				android:id="@+id/textView3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="I am:"
				android:layout_gravity="center_horizontal"
				android:textColor="@android:color/holo_orange_light"
				android:textSize="18sp" />

			<RadioButton
				android:id="@+id/rbsingle"
				android:layout_width="285dp"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_margin="10dp"
				android:background="@android:color/holo_orange_light"
				android:hint="Single" />

			<RadioButton
				android:id="@+id/rbmaried"
				android:layout_width="285dp"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_margin="0dp"
				android:background="@android:color/holo_orange_light"
				android:hint="Married" />
		</RadioGroup>
		
		<RadioGroup
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_gravity="center_horizontal"
			android:layout_margin="0dp">

			<TextView
				android:id="@+id/textView4"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="I am:"
				android:layout_gravity="center_horizontal"
				android:textColor="@android:color/holo_orange_light"
				android:textSize="18sp" />

			<RadioButton
				android:id="@+id/rbworking"
				android:layout_width="285dp"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_margin="10dp"
				android:background="@android:color/holo_orange_light"
				android:hint="Working" />

			<RadioButton
				android:id="@+id/rbjseeker"
				android:layout_width="285dp"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_margin="0dp"
				android:hint="Job Seeker"
				android:background="@android:color/holo_orange_light" />
			</RadioGroup>

		<EditText
			android:id="@+id/txtage"
			android:layout_marginTop="25dp"
			android:layout_width="285dp"
			android:layout_height="wrap_content"
			android:background="@android:color/holo_orange_light"
			android:layout_gravity="center_horizontal"
			android:hint="@string/age"
			android:inputType="number" />

			<EditText
				android:id="@+id/txtdependencies"
				android:layout_width="285dp"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				android:background="@android:color/holo_orange_light"
				android:layout_gravity="center_horizontal"
				android:hint="@string/Depend"
				android:inputType="number" />

			<CheckBox
				android:id="@+id/ckbresidence"
				android:layout_width="285dp"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_margin="10dp"
				android:hint="Living in Ireland over 3 years"
				android:background="@android:color/holo_orange_light" />
			
			
			
		<Button
			android:id="@+id/btnclick"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_margin="10dp"
			android:layout_gravity="center_horizontal"
			android:hint="@string/checkE" />

	</LinearLayout>
</ScrollView>
