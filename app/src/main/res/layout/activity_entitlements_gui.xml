<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#000000"
	tools:context=".EntitlementsGUI">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<ImageView
			android:id="@+id/imageView7"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:srcCompat="@drawable/logo" />
		<RadioGroup
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_gravity="center_horizontal"
			android:layout_margin="20dp">

			<RadioButton
				android:id="@+id/rbsingle"
				android:layout_width="333dp"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_margin="10dp"
				android:hint="Single"
				android:background="@android:color/holo_orange_light" />

			<RadioButton
				android:id="@+id/rbmaried"
				android:layout_width="329dp"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_margin="10dp"
				android:hint="Married"
				android:background="@android:color/holo_orange_light" />
		
		<RadioGroup
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_gravity="center_horizontal"
			android:layout_margin="20dp">

			<RadioButton
				android:id="@+id/rbworking"
				android:layout_width="348dp"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_margin="10dp"
				android:hint="Working"
				android:background="@android:color/holo_orange_light" />

			<RadioButton
				android:id="@+id/rbjseeker"
				android:layout_width="343dp"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_margin="10dp"
				android:hint="Job Seeker"
				android:background="@android:color/holo_orange_light" />

			<EditText
				android:id="@+id/txtage"
				android:layout_width="369dp"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				android:background="@android:color/holo_orange_light"
				android:hint="@string/age"
				android:inputType="number" />

			<EditText
				android:id="@+id/txtdependencies"
				android:layout_width="369dp"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				android:background="@android:color/holo_orange_light"
				android:hint="@string/Depend"
				android:inputType="number" />

			<CheckBox
				android:id="@+id/ckbresidence"
				android:layout_width="369dp"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_margin="10dp"
				android:hint="Are you living in Ireland over 3 years"
				android:background="@android:color/holo_orange_light" />
			
			
			
		<Button
			android:id="@+id/btnclick"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_margin="10dp"
			android:hint="@string/checkE" />
		<Button
			android:id="@+id/next"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_margin="10dp"
			android:hint="Check Taxrebate"/>
		</RadioGroup>
		</RadioGroup>
	</LinearLayout>
</ScrollView>
